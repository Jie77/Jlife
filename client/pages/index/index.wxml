<!--index.wxml-->
<view class="index-container">
  <view class="container">
    <view class="input-section">
      <view class="weui-cells weui-cells_after-title">
        <view class="weui-cell weui-cell_input">
          <view class="weui-cell__bd">
            <input class="weui-input" placeholder="请输入关键词" bindinput="bindKeyInput"/>
          </view>
        </view>
      </view>
    </view>
    <view class="list-section">
      <view wx:for="{{listInfo}}" wx:key="{{item.id}}">
        <view class="card-container">
          <view class="title">{{item.title}}</view>
          <block wx:if="{{item.desc}}">
            <view class="content">{{item.desc}}</view>
          </block>
          <view class="content-time">期望执行时间: {{item.exceptTime}}</view>
          <block wx:if="{{item.validTime}}">
            <view class="content-time">该信息有效时间: {{item.validTime}}</view>
          </block>
          <view class="btn-container">
            <button type="primary" bindtap="handleConnectRes" >联系他/她</button>
          </view>
        </view>
      </view>
    </view>
  </view>
</view>
